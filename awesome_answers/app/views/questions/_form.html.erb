<%= @question.errors.full_messages.join(", ") %>

<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <%= f.submit %>
<% end %>
